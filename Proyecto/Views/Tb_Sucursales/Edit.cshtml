@model Proyecto.Models.Tb_Sucursales

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="page-header-heading"><span class="typcn typcn-clipboard page-header-heading-icon"></span>SUCURSALES</h1>

            </div>
        </div>
    </div>
</header>
<br />
<script src="~/Scripts/Validation.js"></script>

<script>
    var correcto = "@ViewBag.correcto";
    if (correcto == "edito") {
        swal({ title: "¡ACTUALIZACIÓN EXITOSA!", text: "Sucursal Actualizada correctamente", type: "success", showConfirmButton: true }, function () { location.href = '/Tb_Sucursales/Index' });


    }



</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="col-md-12">
            <div class="widget widget-default">
                <div class="widget-header">Modificar sucursal</div>
                <div class="widget-body">

                    <div class="form">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Codigo)

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="cod">Código *</label>

                            @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control validate-character" } })
                            @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="nom">Nombre *</label>

                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control validate-number" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="apod">Apodo *</label>

                            @Html.EditorFor(model => model.Apodo, new { htmlAttributes = new { @class = "form-control validate-number" } })
                            @Html.ValidationMessageFor(model => model.Apodo, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="pref">Prefijo *</label>

                            @Html.EditorFor(model => model.Prefijo, new { htmlAttributes = new { @class = "form-control validate-number" } })
                            @Html.ValidationMessageFor(model => model.Prefijo, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="tel">Teléfono *</label>

                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control validate-character validate-longitud" } })
                            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="direc">Dirección *</label>

                            @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="nit">NIT *</label>

                            @Html.EditorFor(model => model.NIT, new { htmlAttributes = new { @class = "form-control validate_character" } })
                            @Html.ValidationMessageFor(model => model.NIT, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-10">
                                <input onclick="valsucu1();" type="submit" value="GUARDAR" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<script>
 function valsucu1() {

        valor = document.getElementById("Codigo").value;
        //doc = document.getElementById("Tipo_Documento").selectedIndex;

        nom1 = document.getElementById("Nombre").value;
        ape1 = document.getElementById("Apodo").value;
        ape2 = document.getElementById("Prefijo").value;
        tel = document.getElementById("Telefono").value;
        cel = document.getElementById("Direccion").value;
        email = document.getElementById("NIT").value;



        //sucur = document.getElementById("Sucursal").selectedIndex;



        //rol = document.getElementById("Rol").selectedIndex;


