@model Proyecto.Models.Tb_Abonos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="page-header-heading"><span class="typcn typcn-clipboard page-header-heading-icon"></span>ABONOS CRÉDITO</h1>

            </div>
        </div>
    </div>
</header>
<br />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="col-md-12">
            <div class="widget widget-default">
                <div class="widget-header">Registrar abono</div>
                <div class="widget-body">

                    <div class="form">
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="codigo">Código *</label>
                            
                                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control validate-character" } })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                           
                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="fecha">Fecha *</label>
                           
                                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" , @Value = ViewBag.Fecha} })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                           
                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="credito">Crédito *</label>
                            
                                @Html.DropDownList("Credito", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Credito, "", new { @class = "text-danger" })
                           
                        </div>

                        <div class="form-group col-md-6">
                            <label id="lblid" class="control-label labels" Text="valor">Valor *</label>
                         
                                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control validate-character" } })
                                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                            
                        </div>
                            <div class="form-group col-md-6">
                                <label id="lblid" class="control-label" Text="estado">Estado *</label>
                                <select class="form-control" id="Estado" name="Estado">
                                    <option value="Activa">Activo</option>
                                    <option value="Anulada">Anulado</option>
                                </select>
                            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })

                        </div>
                        
                        <div class="form-inline">
                            <div class="col-md-offset-5 form-group col-md-12">
                                <input type="submit" onclick="return hola()" value="Registrar" class="btn btn-primary" />
                                <input type="reset" value="Limpiar" class="btn btn-default" />                            </div>
                        </div>

                    </div>
                    </div>
                </div>
            </div>
        </div>
        
       }

   
<script type="text/javascript">
    window.onload = function () {
        $('#Estado').attr("disabled", "disabled");
    }

    function hola() {
        var cod = document.getElementById("Codigo").value;
        var fech = document.getElementById("Fecha").value;
        var cred = document.getElementById("Credito").value;
        var val = document.getElementById("Valor").value;
        var est = document.getElementById("Estado").value;

        if (cod == "" || fech == "" || cred == "" || val == "" || est == "") {

            sweetAlert("¡ERROR!", "Debe diligenciar los campos obligatorios!", "error");

            return false;
        } else {
            $('#Estado').removeAttr("disabled");
            swal({title: "¡REGISTRO EXITOSO!", text: "Abono ingresado correctamente", type: "success"}, function(){ location.href="/Tb_Creditos/Index/"});
            return true;
        }



    }
</script>


                 

